{
  "extends": ["stylelint-config-standard", "stylelint-config-idiomatic-order"],
  "customSyntax": "postcss-styled-syntax",
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "customSyntax": "postcss-styled-syntax",
      "rules": { "no-empty-source": null, "at-rule-no-unknown": true }
    }
  ],
  "plugins": ["stylelint-order"],
  "rules": { "no-empty-source": null }
}
